<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xuxu.ebookproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.application.EBookApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.ebook.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ebook.book.BookActivity" />
        <activity android:name=".ui.ebook.category.CategoryActivity" />
        <activity android:name=".ui.ebook.account.AccountActivity" />
        <activity android:name=".ui.ebook.reader.ReaderActivity" />
        <activity android:name=".ui.ebook.transfer.TransferActivity"></activity>
    </application>

</manifest>